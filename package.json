{
  "name": "mellon-password-manager",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "scripts": {
    "check": "biome check --write",
    "type-check": "tsc --noEmit",
    "type-check:fast": "tsc --noEmit --incremental",
    "dev": "bun run check && BUN_RUNTIME_TRANSPILER_CACHE_PATH=0 bun --hot --no-clear-screen src/index.ts",
    "start": "NODE_ENV=production bun src/index.ts",
    "build": "bun type-check && bun build.ts",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "bun biome check --staged --write --no-errors-on-unmatched",
    "pre-push": "bun run type-check:fast"
  },
  "dependencies": {
    "bun-plugin-tailwind": "^0.0.15",
    "nano": "^10.1.4",
    "normalize.css": "^8.0.1",
    "pouchdb-browser": "^9.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "shamir-secret-sharing": "^0.0.4",
    "tailwindcss": "^4.1.18",
    "uuidv7": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "^1.3.5",
    "@types/pouchdb": "^6.4.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3"
  }
}