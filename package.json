{
  "name": "mellon-password-manager",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "scripts": {
    "check": "biome check --write",
    "dev": "bun run check && BUN_RUNTIME_TRANSPILER_CACHE_PATH=0 bun --hot --no-clear-screen src/index.ts",
    "start": "NODE_ENV=production bun src/index.ts",
    "build": "bun run build.ts",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "bun biome check --staged --write --no-errors-on-unmatched"
  },
  "dependencies": {
    "bun-plugin-tailwind": "^0.0.15",
    "nano": "^10.1.4",
    "normalize.css": "^8.0.1",
    "pouchdb-browser": "^9.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "shamir-secret-sharing": "^0.0.4",
    "tailwindcss": "^4.1.4",
    "uuidv7": "^1.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "^1.2.10",
    "@types/pouchdb": "^6.4.2",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.8.3"
  }
}
